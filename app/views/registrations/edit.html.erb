<div class="login-slim-centered">
<h1>Edit Password</h1>
<br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "standard" }) do |f| %>
  <%= devise_error_messages! %>
<br>
<div class="field clearfix">
  <%= f.label "New Password" %> 
  <%= f.password_field :password, :class => "textbox" %><br>
</div>
<div class="field clearfix">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :class => "textbox" %><br>
</div>
<div class="field clearfix">
  <%= f.label :current_password %> 
  <%= f.password_field :current_password, :class => "textbox" %><br>
<i>(we need your current password to confirm your changes)</i><br><em></em>
</div>
<div class="field clearfix">
  <%= f.submit "Update", :class => "button" %>
</div>
<% end %>
<br><br>If you wish to change your default email address on file, please <a href="/contact">contact us</a> by phone or email.
</div>