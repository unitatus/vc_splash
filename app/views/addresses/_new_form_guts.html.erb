<% if @address.nil? %>
  <% @address = Address.new %>
<% end %>
	<tr>
		<td>
			Address First Name:
		</td>
		<td>
			Address Last Name:
		</td>
	</tr>
	<tr>
		<td>
			<% class_name = @address.errors[:first_name].nil? ? "error" : "textbox" %>
	   		<%= f.text_field :first_name, :placeholder => "First Name", :class => "textbox" + (@address.errors[:first_name].empty? ? "": " error"), :style => "width: 200px;" %>
			<%= error_messages_for_attribute(@address, :first_name) %>
		</td>
		<td>
			<%= f.text_field :last_name, :placeholder => "Last Name", :class => "textbox" + (@address.errors[:last_name].empty? ? "": " error"), :style => "width: 200px;" %>
			<%= error_messages_for_attribute(@address, :last_name) %>
		</td>
	</tr>
	<tr>
		<td colspan="2">
			Address Line 1:
		</td>
	</tr>
	<tr>
		<td colspan="2">
			<%= f.text_field :address_line_1, :placeholder => "123 Your Street", :class => "textbox" + (@address.errors[:address_line_1].empty? ? "": " error"), :style => "width: 433px;" %>
			<div style="font-size: 75%">Street address, P.O. box, company name, c/o</div>
			<%= error_messages_for_attribute(@address, :address_line_1) %>	
		</td>
	</tr>
	<tr>
		<td colspan="2">
			Address Line 2:
		</td>
	</tr>
	<tr>
		<td colspan="2">
			<%= f.text_field :address_line_2, :placeholder => "Unit 1, or Apt 1, etc", :class => "textbox" + (@address.errors[:address_line_2].empty? ? "": " error"), :style => "width: 433px;" %>
			<div style="font-size: 75%">Apt, suite, unit, building, floor, etc.</div>
			<%= error_messages_for_attribute(@address, :address_line_2) %>	
		</td>
	</tr>
	<tr>
		<td colspan="2">
			<table>
				<tr>
					<td>City:</td>
					<td>State:</td>
					<td>Zip:</td>
				</tr>
				<tr>
					<td>
						<%= f.text_field :city, :placeholder => "Yourtown", :class => "textbox" + (@address.errors[:city].empty? ? "": " error"), :style => "width: 169px;" %>
						<%= error_messages_for_attribute(@address, :city) %>
					</td>
					<td>
						<%= f.select :state, options_for_select(states_array, @address.state), :include_blank => true, :class => (@address.errors[:state].empty? ? "": "error") %>
						<%= error_messages_for_attribute(@address, :state) %>
					</td>
					<td style="width: 169px">
						<%= f.text_field :zip, :placeholder => "######", :class => "textbox" + (@address.errors[:zip].empty? ? "": " error"), :style => "width: 169px;" %>
						<%= error_messages_for_attribute(@address, :zip) %>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td>
			Day Phone:
		</td>
		<td>
			Evening Phone (optional):
		</td>
	</tr>
	<tr>
		<td>
			<%= f.text_field :day_phone, :placeholder => "###-###-####", :class => "textbox" + (@address.errors[:day_phone].empty? ? "": " error"), :style => "width: 200px;" %>
			<%= error_messages_for_attribute(@address, :day_phone) %>
		</td>
		<td>
			<%= f.text_field :evening_phone, :placeholder => "###-###-####", :class => "textbox" + (@address.errors[:evening_phone].empty? ? "": " error"), :style => "width: 200px;" %>
			<%= error_messages_for_attribute(@address, :evening_phone) %>
		</td>
	</tr>
