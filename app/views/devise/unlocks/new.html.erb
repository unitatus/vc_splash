<div class="login-slim-centered">
<h1>Resend unlock instructions</h1>
<br>
<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :class => "standard" }) do |f| %>
<div class="error_label">
  <%= devise_error_messages! %>
</div>

	<div class="field clearfix">
  <%= f.label :email %>
  <%= f.email_field :email, :class => "textbox" %>
</div>

<div class="field clearfix">
  <%= f.submit "Resend unlock instructions", :class => "button" %>
</div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>