<div class="login-slim-centered">

<h1>Change your password</h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "standard" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  	<div class="field clearfix">
  <%= f.label :password, "New password" %>
  <%= f.password_field :password, :class => "textbox" %>
</div>

  	<div class="field clearfix">
  <%= f.label :password_confirmation, "Confirm new password" %>
  <%= f.password_field :password_confirmation, :class => "textbox" %>
</div>
<br>
<div class="field clearfix">
  <%= f.submit "Change my password", :class => "button" %>
</div>
<% end %>
<br><br>
<%= render :partial => "devise/shared/links" %>
</div>